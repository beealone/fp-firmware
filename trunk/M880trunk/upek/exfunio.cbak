#define MAXPIXELCNT	10
static int PixelCnt=0;
#define CHECKDELAY(i) \
	if(MCUVersion>=5)\
		i=10;\
	else if(MAXPIXELCNT==++PixelCnt)\
	{\
		i+=5;\
		PixelCnt=0;\
	}\

