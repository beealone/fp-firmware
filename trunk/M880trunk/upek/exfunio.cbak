void ExGetLCDSize(int *Width, int *Height, int *Data)
{
	int c=5;
	char buf[20];
	*Width=128;
	*Height=64;
	if(MCUVersion<4)
	{
		return;
	}
	while(c--)
	{
		buf[0]=0;
		ExCommand(RCMD_LCD_SIZE, NULL, 0, 2);
		if(BT232Wait(RCMD_LCD_SIZE, 100, buf))
			break;
	}
	if(c>0)
	{
		*Height=((BYTE*)buf)[0];
		*Width=((BYTE*)buf)[1];
		if(MCUVersion>=6)
			*Data=((BYTE*)buf)[2]|((BYTE*)buf)[3]<<8|((BYTE*)buf)[4]<<16|((BYTE*)buf)[5]<<24;
		else
			*Data=0;
	}
}
